{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/../../src/$1",
    "^@test/(.*)$": "<rootDir>/../../test/$1",
    "^@app/common/(.*)$": "<rootDir>/../../../../libs/common/src/$1",
    "^@app/utils/(.*)$": "<rootDir>/../../../../libs/utils/src/$1",
    "^@app/entity/(.*)$": "<rootDir>/../../../../libs/entity/src/$1"
  }
}
